<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.achmadfarhanfebrianto_1202154208_modul2.takeaway">
    <TextView
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identitas Pemesan:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/namapemesan"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/teleponpemesan"
        android:hint="No.Telepon"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="phone"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/alamatpemesan"
        android:hint="Alamat"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/catatantambahan"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Catatan"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Pesanan"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#008e96"
        android:textColor="#fff"
        android:padding="20dp"
        android:onClick="pilihpesanan"/>
</LinearLayout>
